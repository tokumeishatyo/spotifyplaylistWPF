<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Dark Theme Colors -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#1DB954"/>
    <SolidColorBrush x:Key="FooterBackgroundBrush" Color="#383838"/>
    
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="HeaderTextBrush" Color="#FFFFFF"/>
    
    <SolidColorBrush x:Key="BorderBrush" Color="#555555"/>
    <SolidColorBrush x:Key="HoverBrush" Color="#404040"/>
    <SolidColorBrush x:Key="SelectedBrush" Color="#0D47A1"/>
    
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#404040"/>
    <SolidColorBrush x:Key="ButtonTextBrush" Color="#1DB954"/>
    
    <SolidColorBrush x:Key="DeleteButtonBrush" Color="#FF5252"/>
    <SolidColorBrush x:Key="DeleteButtonHoverBrush" Color="#E53935"/>
    
    <!-- Checkbox and Image Backgrounds -->
    <SolidColorBrush x:Key="PlaylistImageBackgroundBrush" Color="#404040"/>
    <SolidColorBrush x:Key="TrackImageBackgroundBrush" Color="#505050"/>
    
    <!-- Icon and Fallback Colors -->
    <SolidColorBrush x:Key="PlaylistIconBrush" Color="#BBBBBB"/>
    <SolidColorBrush x:Key="TrackIconBrush" Color="#AAAAAA"/>
</ResourceDictionary>