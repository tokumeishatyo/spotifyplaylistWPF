<UserControl x:Class="SpotifyManager.Wpf.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpotifyManager.Wpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#1DB954" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                          Text="{Binding UserName, StringFormat='Welcome, {0}!'}"
                          Foreground="White"
                          FontSize="16"
                          VerticalAlignment="Center"/>
                
                <Button Grid.Column="1"
                        Command="{Binding ToggleThemeCommand}"
                        Width="40"
                        Height="40"
                        Margin="5"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="White"
                        FontSize="20"
                        Cursor="Hand">
                    <Button.Content>
                        <TextBlock Text="{Binding CurrentTheme, Converter={StaticResource ThemeToIconConverter}}"/>
                    </Button.Content>
                </Button>
                
                <Button Grid.Column="2"
                        Content="ログアウト"
                        Command="{Binding LogoutCommand}"
                        Padding="10,5"
                        Margin="5"
                        Background="White"
                        Foreground="#1DB954"
                        BorderThickness="0"
                        Cursor="Hand"/>
            </Grid>
        </Border>
        
        <!-- Content Area -->
        <Grid Grid.Row="1" Background="#F5F5F5">
            <TextBlock Text="プレイリスト一覧"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      FontSize="24"
                      Foreground="#666666"/>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#E0E0E0" Padding="10">
            <Button Content="Delete"
                    IsEnabled="False"
                    HorizontalAlignment="Center"
                    Padding="20,10"
                    Background="#FF5252"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="16"
                    Cursor="Hand"/>
        </Border>
    </Grid>
</UserControl>